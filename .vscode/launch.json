{
    "version": "0.2.0",
    "configurations": [
    
        {
            "name": "SIM: Deploy",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/bin/deploy-sim.py",
            "args": [
                "--src", "${workspaceFolder}",
            ],
            "console": "integratedTerminal",
            "justMyCode": true,
        },
        {
            "name": "SIM: Deploy & Launch",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/bin/deploy-sim.py",
            "args": [
                "--src", "${workspaceFolder}",
                "--sim", "${env:FRSKY_SIM_BIN}",
            ],
            "console": "integratedTerminal",
            "justMyCode": true,
        },
        {
            "name": "Radio: Deploy (Fast)",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/bin/deploy-sim.py",
            "args": [
                "--src", "${workspaceFolder}",
                "--radioDeploy",
                "--fileext","fast"
            ],
            "console": "integratedTerminal",
            "justMyCode": true,
        },
        {
            "name": "Radio: Deploy & Debug (Fast)",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/bin/deploy-sim.py",
            "args": [
                "--src", "${workspaceFolder}",
                "--radioDeploy",
                "--radioDebug",
                "--fileext","fast"
            ],
            "console": "integratedTerminal",
            "justMyCode": true,
        },
        {
            "name": "Radio: Debug",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/bin/deploy-sim.py",
            "args": [
                "--radioDebug",
            ],
            "console": "integratedTerminal",
            "justMyCode": true,
        },
    ]
  }
  